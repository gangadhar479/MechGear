<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mechgear.mechgear.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Mech Gears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="24sp"
        android:id="@+id/textView1"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="used high quality gearboxes at low prices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="16sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView2"
        android:id="@+id/textView3"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Shop No. 7, 8, Plot No. 242,
near Patel Weigh Bridge,
Sardar Chowk, GIDC,
Vapi - 396195. Gujarat - India."
        android:textSize="16sp"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView3"
        android:id="@+id/textView4"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Phone :
+91-260 - 2450133


Mobile :
+91 - 9998953770
+91 - 9825553770

Email :
mechgears.vapi@gmail.com

Hours of operation:
8:00 am to 5:oo pm ist
"
        android:textSize="16sp"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView4"
        android:id="@+id/textView5"
        android:layout_height="wrap_content" />




</RelativeLayout>
